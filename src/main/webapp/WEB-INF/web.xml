<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Session.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ejercicios</servlet-name>
        <servlet-class>API.Ejercicios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Guardar</servlet-name>
        <servlet-class>API.Guardar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarEjercicio</servlet-name>
        <servlet-class>API.BuscarEjercicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Actualizar</servlet-name>
        <servlet-class>API.Actualizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Eliminar</servlet-name>
        <servlet-class>API.Eliminar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ejercicios</servlet-name>
        <url-pattern>/Ejercicios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Guardar</servlet-name>
        <url-pattern>/Guardar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarEjercicio</servlet-name>
        <url-pattern>/BuscarEjercicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Actualizar</servlet-name>
        <url-pattern>/Actualizar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Eliminar</servlet-name>
        <url-pattern>/Eliminar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
